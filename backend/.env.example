# =============================================================================
# OCR Platform - Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed
# DO NOT commit the .env file to version control

# Database Configuration
# For Docker: postgresql://ocr_user:ocr_password@postgres:5432/ocr_db
# For Local: postgresql://ocr_user:ocr_password@localhost:5432/ocr_db
DATABASE_URL=postgresql://ocr_user:ocr_password@postgres:5432/ocr_db

# Redis Configuration
# For Docker: redis://redis:6379/0
# For Local: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0

# Application Settings
ENVIRONMENT=development  # development, staging, or production
DEBUG=True  # Set to False in production
APP_NAME=OCR Platform
APP_VERSION=1.0.0

# Upload Settings
UPLOAD_DIR=./uploads  # Directory to store uploaded files
MAX_UPLOAD_SIZE=20971520  # 20MB in bytes
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf","tiff","bmp"]

# OCR Engine Settings
DEFAULT_OCR_ENGINE=paddleocr  # paddleocr, tesseract, or auto
OCR_LANGUAGE=en  # Language code (en, zh, fr, de, etc.)
TESSERACT_ENABLED=True  # Enable Tesseract as fallback engine
TESSERACT_CMD=/usr/bin/tesseract  # Path to Tesseract executable
OCR_CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for fallback (0.0-1.0)

# Celery Settings (Background Tasks)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"

# CORS Settings (Optional - for production)
# CORS_ORIGINS=["https://your-frontend-domain.com"]

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
